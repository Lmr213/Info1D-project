<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".checklist">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/checklist_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/cardview_light_background"
            android:scaleType="fitCenter"
            android:src="@drawable/previous" />
        <TextView
            android:id="@+id/checklist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checklist"
            android:layout_gravity="center"
            android:textSize="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="631dp"
        android:background="#185980"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:id="@+id/content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ferry Information"
                android:layout_gravity="center"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/content_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="29 FEB 2022"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/content_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SINGAPORE-BATAM,INDONESIA "
                android:layout_gravity="left"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/content_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure: TANAH MERAH FERRY TERMINAL,SINGAPORE\nArrival: BATAM CENTER, BATAM "
                android:layout_gravity="left"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/content_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Departure Time: 14:30 HRS (GST+8)\nArrial Time: 21:30 (GST+8)"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:textSize="15dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00A542"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:id="@+id/content_baggage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baggage"
                android:layout_gravity="left"
                android:backgroundTint="@color/white"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/baggage_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Opened"
                android:layout_gravity="left"
                android:backgroundTint="@color/white"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/content_baggage_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check-In\nCounter 1-4\nEstimation Time: 13:00 hrs"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#E07D12"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <TextView
                android:id="@+id/content_immigration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Immigration"
                android:layout_gravity="left"
                android:backgroundTint="@color/white"
                android:textSize="30dp"/>
            <TextView
                android:id="@+id/immigration_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Closed"
                android:layout_gravity="left"
                android:backgroundTint="@color/white"
                android:textSize="20dp"/>
            <TextView
                android:id="@+id/content_immigration_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lane 1-8\nEstimation Time: 13:10 hrs"
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

